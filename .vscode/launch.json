    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Test Run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/unittest/entrypoint/test_run.py",
            "console": "integratedTerminal",
            "env": {
                "_PYTEST_RAISE": "1"
            },
        },
        {
            "name": "Python: Test Archive",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/unittest/data/test_archive.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "_PYTEST_RAISE": "1"
            },
        }
    ]
}